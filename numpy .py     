import numpy as np

marks = np.array([
    [85, 78, 92],
    [88, 74, 81],
    [90, 95, 89],
    [70, 65, 72],
    [60, 75, 68]
])

print("Student Marks:\n", marks)

print("\n--- Overall Statistics ---")
print("Mean Marks:", np.mean(marks))
print("Median Marks:", np.median(marks))
print("Standard Deviation:", np.std(marks))

subjects = ["Math", "Science", "English"]
subject_avg = np.mean(marks, axis=0)

print("\n--- Subject-wise Average ---")
for sub, avg in zip(subjects, subject_avg):
    print(f"{sub}: {avg:.2f}")

total_scores = np.sum(marks, axis=1)
top_student_index = np.argmax(total_scores)

print("\nTop Scoring Student Index:", top_student_index)
print("Total Marks of Top Student:", total_scores[top_student_index])

def assign_grade(score):
    if score >= 90:
        return "A"
    elif score >= 75:
        return "B"
    elif score >= 60:
        return "C"
    else:
        return "D"

print("\n--- Grades ---")
for i, total in enumerate(total_scores):
    avg_score = total / 3
    print(f"Student {i} - Grade:", assign_grade(avg_score))
